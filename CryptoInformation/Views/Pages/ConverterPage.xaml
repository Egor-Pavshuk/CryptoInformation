<Page x:Class="CryptoInformation.Views.Pages.ConverterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoInformation.Views.Pages" 
      xmlns:vm="clr-namespace:CryptoInformation.ViewModels" 
      d:DataContext="{d:DesignInstance Type=vm:ConverterViewModel}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConverterPage">
    
    <Page.DataContext>
        <vm:ConverterViewModel />
    </Page.DataContext>
    
    
    <Grid Background="White">
        <StackPanel Grid.Row="0" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Top" Height="30" >
            <TextBlock Text="Name" Grid.Column="0" TextAlignment="Center" Margin="80,5,115,10"/>
            <TextBlock Text="Symbol" Grid.Column="1" Margin="10,5,10,10"/>
            <TextBlock Text="Price USD" Grid.Column="2" Margin="110,5,10,10"/>
            <TextBlock Text="More details" Margin="90,5,10,10"/>
        </StackPanel>
    </Grid>
</Page>
